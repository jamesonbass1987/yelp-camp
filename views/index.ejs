<% include partials/header %>

<div class='container'>

    <% include partials/navbar  %>

    <header class="jumbotron">
        <h1>Welcome to YelpCamp!</h1>
        <p>View our hand-picked campgrounds from all over the world.</p>
        <p><a class="btn btn-primary btn-large" href="/campgrounds/new">Create New Campground</a></p>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds</h3>
        </div>

        <% for(const campground of campgrounds){ %>
            <div class="col-md-3 col-sm-6  d-flex align-items-stretch">
                <div class="card">
                    <img class="card-img-top" src="<%= campground.image %>" alt="Campground" />
                    <div class="card-body text-center">
                        <h6 class="card-title"><%= campground.name %></h6>
                        <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">More Info</a>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
    
    <% include partials/footer   %>

</div>