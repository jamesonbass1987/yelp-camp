<% include partials/header %>

<div class="container">
    <% include partials/navbar %>
    

    <div class="row">
        <div class="col-md-12 text-center">
            <h1>Create A New Campground</h1>
        </div>
        <div class="col-md-6 offset-md-3 p-3">
            <form method="POST" action="/campgrounds">
                <div class="form-group col-md-10 offset-md-1 p-0">
                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter name" required>
                </div>

                <div class="form-group col-md-10 offset-md-1 p-0">
                    <input type="text" class="form-control" id="image" name="image" placeholder="Enter Image URL" required>
                </div>

                <div class="form-group col-md-10 offset-md-1 p-0">
                    <textarea rows="3" class="form-control" name="description" placeholder="Enter description"></textarea>
                </div>

                <input type="submit" class="btn btn-block btn-primary col-md-10 offset-md-1" value="Create">
            </form>
            <p class="p-3"><a href="/campgrounds"> Go Back</a></p>
        </div>
    </div>

    <% include partials/footer %>

</div>


